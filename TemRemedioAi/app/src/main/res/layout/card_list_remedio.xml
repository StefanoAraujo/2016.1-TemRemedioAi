<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    app:cardElevation="1dp"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <!--android:id="@+id/cardViewRemedio"-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNomeMedicamento"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:text="Nome Medicamento"
                android:textColor="@color/colorPrimaryText"
                android:editable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewQuantidadeMedicamento"
                android:textColor="@color/colorSecondText"
                android:textSize="14sp"
                android:text="300 mg"
                android:editable="false"
                android:layout_below="@+id/textViewNomeMedicamento" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_keyboard_arrow_down" />

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/expandable"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageGraficView"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:background="@android:drawable/ic_menu_recent_history" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTipoMedicamento"
                    android:textSize="14sp"
                    android:text="Unidade de Venda"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewNivelAtMedicamento"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:text="Nível de Atenção"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_below="@+id/textViewTipoMedicamento"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecionar UBS"
                    android:id="@+id/buttonSelecionarUbs"
                    android:layout_alignParentEnd="true"
                    android:minWidth="88dp"
                    android:minHeight="54dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_alignParentBottom="false"
                    android:textColor="@color/colorPrimaryText"
                    android:singleLine="false"
                    android:elevation="0dp"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
