<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    app:cardElevation="1dp"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_medicine">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMedicineName"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:text="Nome Medicamento"
                android:textColor="@color/colorPrimaryText"
                android:editable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMedicineDosage"
                android:textColor="@color/colorSecondText"
                android:textSize="14sp"
                android:text="300 mg"
                android:editable="false"
                android:layout_below="@+id/textViewMedicineName" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewArrow"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_keyboard_arrow_down"
                android:clickable="true"/>

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/expandable"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="false"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="20dp"
                    android:minHeight="130dp"
                    android:minWidth="130dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewMedicineType"
                    android:textSize="14sp"
                    android:text="Unidade de Venda"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@+id/pie_chart_medicine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewMedicineAttetionLevel"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:text="Nível de Atenção"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_below="@+id/textViewMedicineType"
                    android:layout_toRightOf="@+id/pie_chart_medicine" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecionar UBS"
                    android:id="@+id/buttonSelectUbs"
                    android:minWidth="88dp"
                    android:minHeight="54dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignWithParentIfMissing="false"
                    android:textColor="@color/colorPrimaryText"
                    android:singleLine="false"
                    android:elevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textViewMedicineAttetionLevel"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informar"
                    android:id="@+id/buttonInformRemedio"
                    android:minWidth="88dp"
                    android:minHeight="54dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/colorPrimaryText"
                    android:singleLine="false"
                    android:elevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/textViewMedicineAttetionLevel"
                    android:layout_toLeftOf="@+id/buttonSelectUbs"
                    android:layout_alignStart="@+id/textViewMedicineAttetionLevel"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
